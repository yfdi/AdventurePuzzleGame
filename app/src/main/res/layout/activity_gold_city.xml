<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.diyanfang.finalprojectadventuregame.GoldCity">

    <ImageView
        android:id="@+id/close_gold_city"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/close_gold_city" />

    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="11dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/next_button"
        android:drawableRight="@drawable/arrow_right"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="13dp"
        android:text="@string/gold_city_opening"
        android:textColor="#000000"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/gold_city_person"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignBottom="@+id/next_button"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:src="@drawable/normal_person" />

    <ImageView
        android:id="@+id/gold_city_speech_bubble"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_above="@+id/next_button"
        android:layout_alignEnd="@+id/next_button"
        android:layout_alignRight="@+id/next_button"
        android:layout_marginBottom="54dp"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        android:src="@drawable/gold_city_speech_bubble" />

</RelativeLayout>
