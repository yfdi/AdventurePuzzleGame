<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.diyanfang.finalprojectadventuregame.DesertCity">

    <ImageView
        android:id="@+id/close_desert"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/close_desert" />

    <ImageView
        android:id="@+id/transparent_image"
        android:layout_width="260dp"
        android:layout_height="150dp"
        android:layout_above="@+id/cactus"
        android:layout_alignEnd="@+id/cactus"
        android:layout_alignRight="@+id/cactus"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp" />

    <ImageView
        android:id="@+id/search_hint"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/speech_bubble"
        android:layout_alignStart="@+id/speech_bubble"
        android:layout_alignTop="@+id/transparent_image"
        android:layout_marginTop="32dp"
        android:src="@drawable/search" />

    <ImageView
        android:id="@+id/cactus"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="59dp"
        android:layout_marginRight="59dp"
        android:src="@drawable/cactus" />

    <ImageView
        android:id="@+id/speech_bubble"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignBottom="@+id/cactus"
        android:layout_marginBottom="39dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:layout_toLeftOf="@+id/cactus"
        android:layout_toStartOf="@+id/cactus"
        android:src="@drawable/speech_bubble" />

    <TextView
        android:id="@+id/speech_bubble_text"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:gravity="center"
        android:layout_alignLeft="@+id/speech_bubble"
        android:layout_alignStart="@+id/speech_bubble"
        android:layout_alignTop="@+id/speech_bubble"
        android:text="@string/cactus_speech"
        android:textStyle="bold"/>

</RelativeLayout>
