<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.diyanfang.finalprojectadventuregame.FlameCityQuiz">

    <ImageView
        android:id="@+id/close_flame_city"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/flame_city" />

    <ImageView
        android:id="@+id/flame_city_person"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/person_need_help"
        android:layout_marginLeft="65dp"
        android:layout_marginStart="65dp"
        android:src="@drawable/person_need_help" />

    <ImageView
        android:id="@+id/person_need_help"
        android:layout_width="155dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="137dp"
        android:layout_toEndOf="@+id/flame_city_person"
        android:layout_toRightOf="@+id/flame_city_person"
        android:src="@drawable/ask_for_water" />

</RelativeLayout>